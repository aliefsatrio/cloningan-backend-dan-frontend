---
import DashboardLayout from "../../../layouts/dashboardLayout.astro";

const { order_id } = Astro.params;

const res = await fetch(`http://localhost:3000/users/${order_id}`);
const data = await res.json();

if (!res.ok) {
  throw new Error("Order tidak ditemukan");
}

const { order, items } = data;
---

<DashboardLayout>
  <!-- HEADER -->
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold">
      Detail Transaksi
      <span class="text-gray-500 text-lg">
        #{order.ORDER_ID}
      </span>
    </h2>

    <a
      href="/admin/users"
      class="px-4 py-2 rounded bg-gray-200 hover:bg-gray-300"
    >
      ‚Üê Kembali
    </a>
  </div>

  <!-- INFO CARD -->
  <div class="grid grid-cols-2 gap-6 mb-8">
    <div class="bg-white p-6 rounded shadow">
      <h3 class="font-semibold mb-3 text-lg">Informasi Transaksi</h3>
      <p><b>Tanggal:</b> {new Date(order.ORDER_DATE).toLocaleString()}</p>
      <p><b>Metode:</b> {order.METHOD}</p>
      {order.BANK_TRANS && (
        <p><b>Bank:</b> {order.BANK_TRANS}</p>
      )}
      <p class="mt-3 text-xl font-bold text-green-600">
        Total: Rp {Number(order.TOTAL).toLocaleString()}
      </p>
    </div>

    <div class="bg-white p-6 rounded shadow">
      <h3 class="font-semibold mb-3 text-lg">Customer & Kasir</h3>
      <p><b>Customer:</b> {order.CUST_NAME}</p>
      <p><b>Kasir:</b> {order.USERNAME}</p>
    </div>
  </div>

  <!-- TABLE ITEMS -->
  <div class="bg-white rounded shadow overflow-hidden">
    <table class="w-full text-sm">
      <thead class="bg-gray-100">
        <tr>
          <th class="text-left p-4">Produk</th>
          <th class="text-center p-4">Qty</th>
          <th class="text-right p-4">Harga</th>
          <th class="text-right p-4">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {items.map((item: any) => (
          <tr class="border-t hover:bg-gray-50">
            <td class="p-4">{item.PRODUCT_NAME}</td>
            <td class="p-4 text-center">{item.QTY}</td>
            <td class="p-4 text-right">
              Rp {Number(item.PRICE).toLocaleString()}
            </td>
            <td class="p-4 text-right font-semibold">
              Rp {Number(item.SUBTOTAL).toLocaleString()}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <!-- FOOTER ACTION -->
  <div class="mt-8 flex justify-end gap-4">
    <button
      class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
      onclick="window.print()"
    >
      Cetak Struk
    </button>
  </div>
</DashboardLayout>

